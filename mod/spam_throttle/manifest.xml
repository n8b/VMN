<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
    <name>Spam Throttle</name>
    <id>spam_throttle</id>
    <author>Matt Beckett</author>
    <version>2.0.3</version>
    <description>Configurable time-based limits to content creation to assist in managing spam abuse.</description>
    <website>http://mattbeckett.me/</website>
    <copyright>(C) Matt Beckett 2015</copyright>
    <license>GNU Public License version 2</license>
 
    <category>Spam Control</category>
 
    <!-- All plugins must require either elgg_version or elgg_release. -->
    <requires>
        <type>elgg_release</type>
        <version>1.9</version>
    </requires>
 
    <suggests>
        <type>plugin</type>
        <name>reportedcontent</name>
    </suggests>
        
    <suggests>
        <type>plugin</type>
        <name>trusted_users</name>
    </suggests>
</plugin_manifest>
